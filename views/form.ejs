    <!-- Main -->
    <main class="row m-0">
        <div class="col-md-3 col-sm-3 form-section">
            <div class="side-bar-links">
                <a class="page1" href="#" >Personal Information</a>
                <a class="page2" href="#">Job Preference</a>
                <a class="page3" href="#">Language / Dialect Proficiency</a>
                <a class="page4" href="#">Educational Background</a>
                <a class="page5" href="#">Technical / Vocation / Training</a>
                <a class="page6" href="#">Eligibility / Professional License</a>
                <a class="page7" href="#">Work Experience</a>
                <a class="page8" href="#">Other Skills Acquired with Formal Training</a>
                <a class="page9" href="#">Certification and Authorization</a>
            </div>
            <figure id="arrow-icon" class="col-sm-2">
                <img id="arrow-forward" src="/images/arrow_forward.svg" alt="Arrow forward icon">
                <img id="arrow-back" src="/images/arrow_back.svg" alt="Arrow back icon">
            </figure>
        </div>
        <!-- Personal Information -->
        <form class="col-md-9 col-sm-9 col-12 form-content personal-information" id="page1">
            <header>
                <a href="">Go Back</a>
                <h4>INSTRUCTIONS:</h4>
                <p>Check appropriate boxes. Please do not leave any items unanswered. Indicate "NA" if not applicable.</p>
            </header>   
            <div class="row custom-form">
                <div class="col-md-3 col-sm-6 mt-3">
                    <!-- <label for=""></label> -->
                    <input class="form-control" type="text" name="surname" placeholder="Surname">
                </div>
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="firstname" placeholder="First name">
                </div>
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="middlename" placeholder="Middle name">
                </div>
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="suffix" placeholder="Suffix">
                </div>
            </div>
            <div class="row custom-form">
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="date" name="date" placeholder="Birthdate">
                </div>
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="email" name="email" placeholder="Email">
                </div>
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="contact" placeholder="Contact">
                </div>
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="height" placeholder="Height">
                </div>
            </div>
            <div class="row custom-form">
                <div class="col-md-3 col-sm-6 col-6 mt-3">
                    Gender
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="male" value="male" checked>
                        <label class="form-check-label" for="male">Male</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                        <label class="form-check-label" for="female">Female</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-6 mt-3">
                    Civil Status
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="civil_status" id="single" value="single" checked>
                        <label class="form-check-label" for="single">Single</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="civil_status" id="married" value="married">
                        <label class="form-check-label" for="married">Married</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="civil_status" id="widowed" value="widowed">
                        <label class="form-check-label" for="widowed">Widowed</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-3 col-sm-6 col-6 mt-3">
                    <div>
                        Disability
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="disability" id="visual" value="visual">
                                <label class="form-check-label" for="visual">Visual</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="disability" id="hearing" value="hearing">
                                <label class="form-check-label" for="hearing">Hearing</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="disability" id="speech" value="speech">
                                <label class="form-check-label" for="speech">Speech</label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="disability" id="physical" value="physical">
                                <label class="form-check-label" for="physical">Physical</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="disability" id="mental" value="mental">
                                <label class="form-check-label" for="mental">Mental</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="disability" id="disability_others" value="">
                                <label class="form-check-label" for="disability_others">Others</label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 ">
                        <input class="col-12 form-control" id="input_disability_others" type="text" placeholder="Please specify">
                    </div>
                </div>
            </div>
            <div class="row custom-form pt-3">
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="religion" placeholder="Religion">
                </div>
                <div class="col-md-3 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="contact" placeholder="Contact">
                </div>
            </div>
            <div class="row custom-form pt-3">
                <div class="col-md-12 col-sm-12">
                    Present Address
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="province" placeholder="Province">
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="city-municipality" placeholder="City or municipality">
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="barangay" placeholder="Barangay">
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 mt-3">
                    <input class="form-control" type="text" name="house_no_street" placeholder="House No. / Street">
                </div>
            </div>
            <div class="row custom-form pt-3">
                <div class="col-md-12">Employment Status / Type</div>
                <div class="col-lg-6 col-md-12 mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="employment_status" id="employed" value="employed" checked>
                        <label class="form-check-label" for="employed">Employed</label>
                    </div>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type_employed" id="wage_employed" value="wage employed">
                            <label class="form-check-label" for="wage_employed">Wage Employed</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type_employed" id="self_employed" value="self employed">
                            <label class="form-check-label" for="self_employed">Self Employed (Please specify)</label>
                        </div>        
                    </div>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="fisherman" id="fisherman" value="fisherman">
                            <label class="form-check-label" for="fisherman">Fisherman/Fisherfolk</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="vendor" id="vendor" value="vender">
                            <label class="form-check-label" for="vendor">Vendor/Retailer</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="home_based_worker" id="home_based_worker" value="home based worker">
                            <label class="form-check-label" for="home_based_worker">Home-based worker</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="transport" id="transport" value="transport">
                            <label class="form-check-label" for="transport">Transport</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="domestic" id="domestic" value="domestic">
                            <label class="form-check-label" for="domestic">Domestic Worker</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="freelancer" id="freelancer" value="freelancer">
                            <label class="form-check-label" for="freelancer">Freelancer</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="artisan_craft_worker" id="artisan_craft_worker" value="artisan craft worker">
                            <label class="form-check-label" for="artisan_craft_worker">Artisan/Craft Worker</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="employed_others" id="employed_others" value="na">
                            <label class="form-check-label" for="employed_others">Others</label>
                        </div>
                        <div class="mt-2">
                            <input class="form-control" type="text" placeholder="Please specify" id="input_employed_others">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="employment_status" id="unemployed" value="unemployed">
                        <label class="form-check-label" for="unemployed">Unemployed</label>
                    </div>
                    <div class="">
                        <label for="">How long have you been looking for work?</label>
                        <input class="form-control" type="text" name="how_long_looking_work">
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="unemployed" id="new_entrant_fresh_graduate" value="new entrant or fresh graduate">
                                <label class="form-check-label" for="new_entrant">New Entrant/Fresh Graduate</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="unemployed" id="finished_contract" value="finished contract">
                                <label class="form-check-label" for="finished_contract">Finished Contract</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="unemployed" id="resigned" value="resigned">
                                <label class="form-check-label" for="resigned">Resigned</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="unemployed" id="retired" value="retired">
                                <label class="form-check-label" for="retired">Retired</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="unemployed" id="laid_off_due_calamity" value="laid off due calamity">
                                <label class="form-check-label" for="laid_off_due_calamity">Terminated/Laid off due to calamity</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="unemployed" id="laid_off_local" value="laid off local">
                                <label class="form-check-label" for="laid_off_local">Terminated/Laid off (local)</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="unemployed" id="laid_off_abroad" value="na">
                                <label class="form-check-label" for="laid_off_abroad">Terminated/Laid off (abroad)</label>
                            </div>
                            <div class="mt-2 d-inline-block">
                                <input class="form-control" type="text" id="input_laid_off_abroad" placeholder="Specify country:">
                            </div>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="radio" name="unemployed" id="unemployed_others" value="na">
                                <label class="form-check-label" for="unemployed_others">Others</label>
                            </div>
                            <div class="mt-2 d-inline-block">
                                <input class="form-control" type="text" id="input_unemployed_others" placeholder="Specify:">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-lg-6">
                    <div>
                        Are you an OFW?
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="is_ofw" id="yes_ofw" value="na">
                        <label class="form-check-label" for="yes_ofw">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="is_ofw" id="no_ofw" value="no">
                        <label class="form-check-label" for="no_ofw">No</label>
                    </div>
                    <div class="mt-2 d-inline-block col-lg-8">
                        <input class="form-control" id="input_ofw_country" type="text" placeholder="Specify country">
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div>
                    Are you a former OFW?
                </div>
                <div class="col-lg-6">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="is_former_ofw" id="yes_former_ofw" value="na">
                        <label class="form-check-label" for="yes_former_ofw">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="is_former_ofw" id="no_former_ofw" value="no">
                        <label class="form-check-label" for="no_former_ofw">No</label>
                    </div>
                    <div class="col-lg-12 mt-3">
                        <input class="form-control" id="ofw_former_country" type="text" placeholder="Latest country of deployment">
                    </div>
                    <div class="col-lg-12 mt-3">
                        <input class="form-control" id="month_year_return_ph" type="text" placeholder="Month and year of return to Philippines">
                    </div>
                </div> 
            </div>
            <div class="row mt-3">
                <div class="col-lg-6">
                    <div>
                        Are you a 4ps beneficiary?
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="is_4ps_beneficiary" id="yes_4ps_beneficiary" value="na">
                        <label class="form-check-label" for="yes">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="is_4ps_beneficiary" id="no_4ps_beneficiary" value="no">
                        <label class="form-check-label" for="no">No</label>
                    </div>
                    <div class="mt-3">
                        <input class="form-control" type="text" id="4ps_household_no" placeholder="If yes, please provide Household ID No.">
                    </div>
                </div>
            </div>
            <footer class="">
                <button class="btn btn-primary my-3 float-end btn-next">Next</button>
            </footer>
        </form>
        <!-- Job Preference -->
        <form class="col-md-9 col-sm-9 col-12 form-content job-preference" id="page2">
            <header>
                <a href="">Go Back</a>
                <h4>INSTRUCTIONS:</h4>
                <p>Check appropriate boxes. Please do not leave any items unanswered. Indicate "NA" if not applicable.</p>
            </header>
            <div class="row">
                <div class="col-lg-5 pt-3">
                    <div>Preferred Occupation</div>
                    <div class="mt-2">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="preferred_occupation" id="part-time" value="part time">
                            <label class="form-check-label" for="part-time">Part-time</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="preferred_occupation" id="full-time" value="full time">
                            <label class="form-check-label" for="full-time">Full-time</label>
                        </div>
                    </div>
                    <div class="mt-3">
                        <input class="form-control" name="occupation1" type="text" placeholder="1.">                        
                    </div>
                    <div class="mt-3">
                        <input class="form-control" name="occupation2" type="text" placeholder="2.">                        
                    </div>
                    <div class="mt-3">
                        <input class="form-control" name="occupation3" type="text" placeholder="3.">                        
                    </div>
                </div>
                <div class="col-lg-7 pt-3">
                    <div>Preferred Work Occupation</div>
                    <div class="row">
                        <div class="col-lg-6 mt-2">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="work_location" id="local" value="local">
                                <label class="form-check-label" for="local">Local 
                                    <span>(specify cities/municipalities)</span>
                                </label>
                            </div>
                            <div class="mt-3">
                                <input class="form-control" name="local_address1" type="text" placeholder="1.">                        
                            </div>
                            <div class="mt-3">
                                <input class="form-control" name="local_address2" type="text" placeholder="2.">                        
                            </div>
                            <div class="mt-3">
                                <input class="form-control" name="local_address3" type="text" placeholder="3.">                        
                            </div>
                        </div>
                        <div class="col-lg-6 mt-2">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="work_location" id="overseas" value="overseas">
                                <label class="form-check-label" for="overseas">Overseas
                                    <span>(specify countries)</span>
                                </label>
                            </div>
                            <div class="mt-3">
                                <input class="form-control" name="overseas_address1" type="text" placeholder="1.">                        
                            </div>
                            <div class="mt-3">
                                <input class="form-control" name="overseas_address2" type="text" placeholder="2.">                        
                            </div>
                            <div class="mt-3">
                                <input class="form-control" name="overseas_address3" type="text" placeholder="3.">                        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-end">
                <button class="d-inline-block btn btn-primary my-3 btn-prev">Previous</button>
                <button class="d-inline-block btn btn-primary my-3 btn-next">Next</button>
            </div>    
        </form>
        <!-- Language/Dialect Proficiency -->
        <form class="col-md-9 col-sm-9 col-12 form-content language-dialect-proficiency" id="page3">
            <header>
                <a href="">Go Back</a>
                <h4>INSTRUCTIONS:</h4>
                <p>Check appropriate boxes. Please do not leave any items unanswered. Indicate "NA" if not applicable.</p>
            </header>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Language/Dialect</th>
                        <th scope="col">Read</th>
                        <th scope="col">Write</th>
                        <th scope="col">Speak</th>
                        <th scope="col">Understand</th>
                      </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <input type="hidden" name="language1" value="na">
                            <th scope="row">English</th>
                            <td><input type="checkbox" class="checkbox_language1" value="read"></td>
                            <td><input type="checkbox" class="checkbox_language1" value="write"></td>
                            <td><input type="checkbox" class="checkbox_language1" value="speak"></td>
                            <td><input type="checkbox" class="checkbox_language1" value="understand"></td>
                        </tr>
                        <tr>
                            <input type="hidden" name="language2" value="na">
                            <th scope="row">Filipino</th>
                            <td><input type="checkbox" class="checkbox_language2" value="read"></td>
                            <td><input type="checkbox" class="checkbox_language2" value="write"></td>
                            <td><input type="checkbox" class="checkbox_language2" value="speak"></td>
                            <td><input type="checkbox" class="checkbox_language2" value="understand"></td>
                        </tr>
                        <tr>
                            <input type="hidden" name="language3" value="na">
                            <th scope="row">Mandarin</th>
                            <td><input type="checkbox" class="checkbox_language3" value="read"></td>
                            <td><input type="checkbox" class="checkbox_language3" value="write"></td>
                            <td><input type="checkbox" class="checkbox_language3" value="speak"></td>
                            <td><input type="checkbox" class="checkbox_language3" value="understand"></td>
                        </tr>
                        <tr>
                            <input type="hidden" name="specify_language" value="na">
                            <th scope="row"><input class="form-control" id="input_specify_language" type="text" placeholder="Others"></th>
                            <td><input type="checkbox" class="checkbox_specify_language" value="read" disabled></td>
                            <td><input type="checkbox" class="checkbox_specify_language" value="write" disabled></td>
