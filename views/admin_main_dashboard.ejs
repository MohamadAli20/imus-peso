    <link rel="stylesheet" href="/css/admin_main_dashboard.css">
    <script src="/js/loginModal.js"></script>
    <script src="/js/admin_main_dashboard.js"></script>
    <!-- <script src="/js/admin_data_analytics.js"></script> -->
    <script src="/js/removeAccount.js"></script>
    <script src="/js/notification.js"></script>
    <script src="/js/account_setting.js"></script>
</head>
<body class="container-fluid">
    <div class="row">
        <!-- Navigation -->
        <div class="side_bar col-lg-3 p-0">
            <div class="d-flex justify-content-between align-items-center">
                <a class=" logo-title p-3" href="#">Admin Panel</a>
                <!-- <div id="notifLogo">
                    <img src="/images/notification.svg" alt="Notification icon">
                </div> -->
            </div>
            <ul class="navbar-nav p-0">
                <li class="nav-item p-3 profile-picture d-flex justify-content-start align-items-center">
                    <img class="border" src="/images/default_profile.jpg" alt="profile picture">
                    <p class="nav-link p-0 px-3 m-0 username"></p>
                </li>
                <li class="nav-item p-3 active">
                    <a class="nav-link" href="/admin_main_dashboard">Dashboard</a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" href="/account_admin">Admin Information</a>
                </li>
                <li class="nav-item p-3 m-0 notification-link">
                    <div class="total_unread_notif"></div>
                    <a class="nav-link" href="/notification">Notification</a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" href="/admin_apply">Fill-Up Form</a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" href="/dashboard">Account</a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" href="/record">Record</a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" href="/data_analytics">Data Analytics</a>
                </li>
                <li class="nav-item p-3">
                    <a class="nav-link" href="/report">Report</a>
                </li>
                <li class="nav-item px-3 py-2">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</button>
                </li>
                <li class="nav-item p-3 custom-nav-item">
                    <!-- <div class="d-flex" id="username">
                        <p class="m-0"></p>
                        <img class="" src="/images/arrow_down.svg" alt="Arrow down icon">
                    </div> -->
                    <!-- <button id="navLoginBtn" type="button" class="btn bg-primary text-white mr-1" data-bs-toggle="modal" data-bs-target="#exampleModal">Login</button> -->
                </li>
            </ul>
        </div>
        <!-- Main -->   
        <main class="col-lg-9">
            <div class="row total-container">
                <div class="col-lg-4">
                    <div class="border row total-applicants-container">
                        <img class="col-lg-5" src="/images/profile-white.svg" alt="total applicant icon">
                        <p class="col-lg-7">TOTAL APPLICANTS <br><span id="total_applicants"></span></p>                        
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="border row total-males-container">
                        <img class="col-lg-5" src="/images/man.svg" alt="total male icon">
                        <p class="col-lg-7">TOTAL MALES <br><span id="total_male"></span></p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="border row total-females-container">
                        <img class="col-lg-5" src="/images/woman.svg" alt="total female icon">
                        <p class="col-lg-7">TOTAL FEMALES <br><span id="total_female"></span></p>
                    </div>
                </div>
            </div>
            <div class="row total-container">
                <div class="col-lg-6">
                    <div class="border row total-unemployed">
                        <img class="col-lg-3" src="/images/unemployed.svg" alt="total unemployed icon">
                        <p class="col-lg-9">TOTAL APPLICANTS WITH A STATUS OF UNEMPLOYED: <br><span id="total_unemployed"></span></p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="border row total-on-process">
                        <img class="col-lg-3" src="/images/on-process.svg" alt="On process icon">
                        <p class="col-lg-9">TOTAL APPLICATION ON-PROCESS <br><span id="total_on_process"></span></p>
                    </div>
                </div>
            </div>
            <div class="row total-container">
                <div class="col-lg-6">
                    <div class="border row total-accepted bg-success">
                        <img class="col-lg-3" src="/images/accepted.svg" alt="Accepted icon">
                        <p class="col-lg-9">APPLICATION ACCEPTED <br><span id="total_accepted"></span></p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="border row total-rejected bg-danger">
                        <img class="col-lg-3" src="/images/rejected.svg" alt="Rejected icon">
                        <p class="col-lg-9">APPLICATION REJECTED <br><span id="total_rejected"></span></p>
                    </div>
                </div>
            </div>
            <div class="row graph-container mt-5">
                <div class="col-lg-6 border">
                    <div id="topPosition" style="height: 290px; width: 100%;"></div>
                </div>
                <div class="col-lg-6 border">
                    <div id="location" style="height: 290px; width: 100%;"></div>
                </div>
            </div>
            <div class="row graph-container my-4">
                <div class="col-lg-6 border">
                    <div id="topCompany" style="height: 290px; width: 90%;"></div>
                </div>
                <div class="col-lg-6 border">
                    <div id="skillGraph" style="height: 290px; width: 90%;"></div>
                </div>
            </div>
            <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
            <script src="https://cdn.canvasjs.com/jquery.canvasjs.min.js"></script>
        </main>
    </div>
    <!-- Account modal -->
    <div id="accountModal" class="account-info-container">
        <h4 class="border m-0 p-2">Username</h4>
        <a href="/account_admin">
            <div class="border m-0 p-2">Account Information</div>
        </a>
        <button class="m-2 btn btn-primary" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</button>
    </div>
    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Logout?</h1>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to logout?</p>
                </div>
                <div class="modal-footer row-fluid py-0 pb-2">
                    <button type="button" class="btn btn-secondary" id="btnLogout">Yes, I want</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No, I don't</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Login Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div id="messageAlert row">
            <div class="message col-lg-5 col-md-7 col-sm-7 m-auto"></div>
        </div>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Login</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="loginMessage"></div>
                    <form id="loginForm">
                        <label>Email address:
                            <input type="text" name="email">
                        </label>
                        <label>Password
                            <input type="password" name="password">
                        </label>
                    </form>
                </div>
                <div class="modal-footer row-fluid py-0 pb-2">
                    <p class="col-lg-8 col-md-8">Don't have an account? <a href="/register">Register</a></p>
                    <div class="">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="btnLogin">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Notification -->
    <div class="notification-container container-fluid border p-0">
        <h2 class="m-2">Notifications</h2>
    </div>
